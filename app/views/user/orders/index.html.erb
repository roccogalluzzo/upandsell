<% content_for :header do %>
  <div class="col-lg-10">
    <h1>ORDERS</h1>
  </div>
<% end %>
    <div class="row">
  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-12">
        <div class="row">
          <div class="col-lg-offset-1 col-lg-10">
            <div class="list">

          <% if @orders.blank? %>
          <tr> <td colspan="2">No orders Founds</td></tr>
          <% else %>
          <% @orders.each do |order| %>
         <div class="list-item row">
               <div class="col-sm-5">
             <%= order.product.name %>
             </div>
             <div class="col-sm-3"> <%= humanized_money_with_symbol order.amount %></div>
            <div class="col-sm-3">


             <%= link_to "Show", user_order_path(order), :class => "btn btn-info" %>

           <%= link_to "Refund", refund_user_order_path(order), :class => "btn btn-success" %>
           </div>
       </div>
       <% end %>
       <% end %>


          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

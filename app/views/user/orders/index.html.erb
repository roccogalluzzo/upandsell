<% content_for :header do %>
<div class="col-lg-10">
  <h1>ORDERS</h1>
</div>
<% end %>
<div class="row">
  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-12">
        <div class="row">
          <div class="col-lg-offset-1 col-lg-10">
            <div class="list">

              <% if @orders.blank? %>
              <p class="text-center text-muted">No orders</p>
              <% else %>
              <% @orders.each do |order| %>
              <div class="order-list-item row">
              <div class="col-sm-3">
                  <%= order.email %>
                </div>

                <div class="col-sm-1">
                  <% if  order.cc_type %>
                  <%= image_tag "cc_icons/#{order.cc_type}.png" %>
                  <% end %>
                </div>

                <div class="col-sm-4">
                 <span class="">  <%= order.product.name %> </span>
               </div>
               <div class="col-sm-1 text-primary"> <%= humanized_money_with_symbol order.amount %></div>
               <div class="col-sm-2 text-center text-muted">
                 <p>
                   <%= order.updated_at.to_time.strftime('%e %b %Y') %>

                   <%= order.updated_at.to_time.strftime('%H:%m:%S') %>
                 </p>
               </div>
               <% unless order.payment_type == 'paypal' %>
               <div class="col-sm-1">
                 <%= link_to "Refund", refund_user_order_path(order), :class => "btn btn-primary" %>
               </div>
               <% end %>
             </div>
             <% end %>
             <% end %>


           </div>
         </div>
       </div>
     </div>
   </div>
   <div class="row">
     <div class="col-md-offset-5 col-md-6">
       <%= paginate @orders %>
     </div>
   </div>
 </div>
</div>

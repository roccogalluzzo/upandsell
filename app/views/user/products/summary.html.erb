 <div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-8">
          <select name="products" class="mbn">
              <option value="0">All Products</option>
               <% @products.each do |product| %>
  <option value="<%= product.id %>"><%= product.name %></option>
               <% end %>
          </select>

      </div>
      <div class="col-md-4">
        <ul class="period-selector">
         <li> <a data-toggle="pill" data-action="1" href="#">Today</a></li>
         <li><a data-toggle="pill" data-action= "7" href="#">Week</a></li>
         <li class="active"><a data-toggle="pill" data-action="30" href="#">Month</a></li>
       </ul>
     </div>
   </div>
   <div class="row">
    <div class="col-md-12 text-center">
      <hr></hr>

    </div>
  </div>
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <div class="row stats-summary">

        <div class="col-md-4 stats-summary-col visits">
          <h3 class="visits_count"><%= @visits[0] || 0%></h3>
          <small>Visits</small>
        </div>
        <div class="col-md-4 stats-summary-col sales">
          <h3 class="sales_count"><%= @sales[0] || 0%></h3>
          <small>Sales</small>
        </div>
        <div class="col-md-4  stats-summary-col earnings">
          <h3>
          <span class="dollar">$</span><span class="earnings_count"><%=  humanized_money @earnings_total || 0%></span></h3>
          <small>Earnings</small>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-offset-1 col-md-10 text-center">
      <hr></hr>

    </div>
  </div>
  <div class="row">
    <div class="col-md-12">

     <%= content_tag "div", id: "dashboard_chart", class: "graph",
     data: { earnings: @earnings[1] } do %>
     <svg></svg>
     <% end %>
   </div>

 </div>
</div>
</div>

<%- title "Setup Account" %>
<div class="setup-timeline">
  <ul>
    <li>
      <%= step('fa-envelope-o', @email) %>
      <div class="cbp_tmlabel email-section">

        <% if @email %>
        <p class="step-success"> Email Confirmed</p>
        <% else %>

        <p> We've sent an email to <b id="email"><%= current_user.email %></b>. </p>
        <p> Please click the link in that message to confirm your email andress.</p>
        <%= form_tag user_update_email_path,
        disable_with: "Saving...", method: :patch, remote: true, id: 'js-email-box',
        class: "hid form-inline" do %>

        <div class="form-group" style="width:40%;">
          <input id="new-email" type="email" name="user[email]"
          style="width:100%;" class="form-control" placeholder="New Email">
        </div>
        <button type="submit" class="btn btn-default">Save</button>
        <% end %>
        <p>
          <%= link_to "Resend", user_resend_email_path, remote: true,
          data: { disable_with: "Resending..."},
          class: "btn btn-primary", id: "resend-email" %>

          <a class="btn btn-default" id="change-email" href="#">Change Email</a></p>
          <small>Make sure to check your junk or spam folder.
           The sender is <b>bot@upandsell.me</b></small>
           <% end %>
         </div>
       </li>

       <li>
         <%= step('fa-money', @payments) %>
         <div class="cbp_tmlabel gateways-section ">

          <% if @payments %>
          <p class="step-success"> Payment Gateway Added</p>
          <% else %>
          <p>Connect a payment gateway to your account.</p>

          <div class="gateways-row">
            <div class="col-md-5 col-md-offset-1">
              <%= image_tag "paypal_logo.gif" %>
              <p>
               <%= link_to "Connect", connect_user_settings_payments_path(gateway: 'paypal'), class: 'btn btn-primary m-t-20' %>
             </p>
           </div>
           <div class="col-md-4">
            <%= image_tag "paymill.png" %>
            <p>
             <%= link_to "Set Up", edit_user_settings_payments_path, class: 'btn btn-primary m-t-20' %>
           </p>
         </div>
       </div>
       <% end %>
     </li>
     <li>
      <%= step('fa-file-o', false) %>
      <div class="cbp_tmlabel add-section">
        <p>Setup complete, add your first product and start selling with us.</p>
        <p><%= link_to(new_user_product_path, class: "btn btn-lg btn-primary") do %>
         Add New Product
         <% end %></p>
       </div>
     </li>
   </ul>
 </div>


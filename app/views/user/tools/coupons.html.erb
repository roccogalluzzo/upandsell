<%= render partial: "user/tools/tabs" %>

<div class="col-md-offset-2 col-md-2">
  <select name="products" class="mbn">
    <option value="0">All Products</option>
    <% current_user.products.each do |product| %>
    <option value="<%= product.id %>"><%= product.name %></option>
    <% end %>
  </select>
</div>

<div class="col-md-4">

</div>
<div class="col-md-3">

</div>

<div class="newsletter-list">

  <table>
    <thead>
      <tr>
        <th class="list-name">List Name</th>
        <th class="subscribers"> Subscribers</th>
        <th class="last-update">Last Update</th>
        <th class="actions">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if @list.blank? %>
      <tr><td colspan="4"><p class="text-center text-muted">No mailing list founds</p></td></tr>
      <% else %>
      <% @list.each do |list| %>
      <tr>
        <td> <%= list.name %> </td>
        <td> <%= list.subscribers %> </td>
        <td> <%= list.last_sent %></td>
        <td> </td>
      </tr>
      <% end %>
      <% end %>
      <tr>

      </tr>
    </tbody>
  </table>
  <div class="pagination">
   <div>
     <%# paginate @orders %>
   </div>
 </div>
</div>

<%= render partial: "user/tools/tabs" %>

<%= simple_form_for [:user, @mailing_list],  html: { class: 'newsletter-form simple_form' } do |f|%>

<div class="col-md-offset-2 col-md-2">
  <select name="mailing_list[products][]" data-width="100%"
  multiple data-selected-text-format="count" title='All Products' class="mbn">
  <% current_user.products.each do |product| %>
  <option value="<%= product.id %>"><%= product.name %></option>
  <% end %>
</select>
</div>

<div class="col-offset-1 col-md-4">
  <%= f.input_field :name, placeholder: "List Name" %>
</div>
<div class="col-md-3">
 <%= f.button :submit,  "Create New List", class: 'btn btn btn-primary' %>
</div>
<% end %>

<div class="newsletter-list">

  <table>
    <thead>
      <tr>
        <th class="list-name">List Name</th>
        <th class="subscribers"> Subscribers</th>
        <th class="last-update">Last Update</th>
        <th class="actions"></th>
      </tr>
    </thead>
    <tbody>
      <% if @list.blank? %>
      <tr><td colspan="4"><p class="text-center text-muted">No mailing list founds</p></td></tr>
      <% else %>
      <% @list.each do |list| %>
      <tr>
        <td> <%= list.name %> </td>
        <td> <%= list.subscribers %> </td>
        <td> <i class="text-muted"><%= list.last_sent || 'Never' %></i></td>
        <td>
         <%= link_to user_mailing_list_path(list), method: :delete, class: 'btn-circle' do %>
         <i class="fa fa-trash-o"></i>
         <% end %>

         <%= link_to sync_user_mailing_list_path(list), class: 'btn-circle' do %>
         <i class="fa fa-exchange"></i>
         <% end %>
         <%= link_to user_mailing_list_path(list), class: 'btn-circle' do %>
         <i class="fa fa-send"></i>
         <% end %>
       </td>
     </tr>
     <% end %>
     <% end %>
     <tr>

     </tr>
   </tbody>
 </table>
 <div class="pagination">
   <div>
     <%# paginate @orders %>
   </div>
 </div>
</div>












</div>



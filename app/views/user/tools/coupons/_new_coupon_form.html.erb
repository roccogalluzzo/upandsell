      <%= simple_form_for [:user, :tools, @coupon], remote: true do |f|%>
      <div class="col-md-2">
       <%= button_tag(type: 'submit', class: "btn-app btn-block") do %>
       Create Coupon
       <% end %>
     </div>
     <%= f.input_field :discount_type, as: :hidden, id: 'js-coupon-type' %>
     <div class="col-md-10">
      <div class="first-row-form">
        <div class="col-md-3">
          <div class="input-group">
            <%= f.input_field :code, placeholder: "CODE" %>
            <a id="js-coupon-random" href="#" class="input-group-addon random-btn"><i class="fa fa-random"></i></a>
          </div>
        </div>
        <div class="col-md-5">
        <select id="js-product-select" name="coupon[product_id]" style="width:100%;"
          data-width="100%"class="form-control select select-primary mbl"
          data-toggle="select">
          <% current_user.products.each do |product| %>
          <option data-price="<%= product.price %>" data-currency="<%= product.price.symbol %>"
            value="<%= product.id %>"><%= product.name %></option>
            <% end %>
          </select>
        </div>
                <div class="col-md-2">
         <div class="input-group">
           <%= f.input_field :discount, type: 'number', min: '0', step: '1', max: '100',  placeholder: "0" %>
           <a id="js-coupon-type-btn" class="input-group-addon type-btn random-btn">
             <span>%</span></a>
           </div>
         </div>
         <div class="show-price-box">
          <span id="js-product-price"></span>
          <span id="js-product-currency">
          </span>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2">
          <p>Valid until:</p>
        </div>
        <div class="col-md-3">
         <div class="form-group">
          <div class="input-group">
            <span class="input-group-btn">
              <button class="btn" type="button"><span class="fui-calendar"></span></button>
            </span>
            <%= f.input_field :expire,  as: :string, class: 'form-control',  placeholder: "No expire", id: 'datepicker' %>
          </div>
        </div>
      </div>
      <div class="col-md-2">
        <p>N. Coupons:</p>
      </div>
      <div class="col-md-2">
       <div class="form-group">
         <%= f.input_field :available, type: 'number', min: '0', step: '1', class: 'form-control', placeholder: 'âˆž' %>
       </div>
     </div>
     <% end %>
   </div>
 </div>
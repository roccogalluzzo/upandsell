<div class="row">
  <div class="form-page col-md-10 col-md-offset-1">
<%= simple_form_for @customer, url:  user_settings_update_payments_path,
class: 'form-horizontal' do |f| %>
<div class="row payment">
  <div class="col-md-1 col-md-offset-1">
  <%= f.check_box :paypal_status, as: :boolean, data: {toggle: 'switch'},
  label: false
  %>

  </div>
  <div class="col-md-3">
  <%= image_tag "paypal_logo.gif" %>
   </div>

    <div class="col-md-6">
      <%= f.input_field :email_paypal, :autocomplete => "off"  %>
    </div>
  </div>

<div class="row payment">
<div class="col-md-1 col-md-offset-1">
<%= f.check_box :credit_card_status, as: :boolean, data: {toggle: 'switch'},
label: false %>

</div>
  <div class="col-md-3">
<%= image_tag "paymill.png", style: "width: 200px;" %>
</div>
 <div class="col-md-6">
 <% if @customer.credit_card_token %>
 <p class="text-success"> Connected </p>
 <% else %>
<a href="<%= @paymill_url %>" class="btn btn-primary">Connect with Paymill</a>
<% end %>
    </div>
  </div>
<div class="row">
 <div class="col-md-12 text-center"><hr />
  <%= f.button :submit, class: 'btn btn-primary' %>
</div>
</div>

<% end %>

</div>
</div>

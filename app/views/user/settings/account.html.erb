  <%= render partial: "tabs" %>
  <div class="row">
    <div class=" col-md-5 col-md-offset-1">
      <%= simple_form_for @user, url:  user_settings_update_account_path,
      class: 'form-horizontal' do |f| %>
      <h3>Info</h3>
      <div class="row form-group">
          <%= f.input_field :email,  placeholder: "Email"  %>
</div>
          <div class="row form-group">
          <%= f.input_field :name,  placeholder: "Your Name"  %>
        </div>
           <div class="row form-group">
             <div class=" col-md-5">
             <span>Account Currency</span>
             </div>
              <div class=" col-md-5 col-md-offset-1">
          <%= f.input_field :currency, collection: ['USD', 'EUR', 'GBP']   %>
          </div>
        </div>
      </div>


    <div class=" col-md-4  col-md-offset-1">
      <h3>New Password</h3>
      <div class="row form-group">
        <%= f.input_field :current_password, autocomplete: "off",
        placeholder: "Current password"  %>
      </div>
      <div class="row form-group">

        <%= f.input_field :password, autocomplete: "off",
        placeholder: "New password"  %>

      </div>
      <div class="row form-group">
        <%= f.input_field :password_confirmation,
        placeholder: "New password confirmation"  %>
      </div>

      <div class="row">
        <div class="col-md-12">
          <div class="form-group">

          </div>
        </div>
      </div>


    </div>
    <div class="form-group">
     <div class="col-md-12 text-center"><hr />
      <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
</div>

<% end %>
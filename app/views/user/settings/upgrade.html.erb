    <%= render partial: "tabs" %>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= simple_form_for :upgrade, url:  user_settings_update_account_path,
        class: 'form-horizontal' do |f| %>

        <div class="row form-group">
          <%= f.input_field :cc_num,  placeholder: "Credit card Numer"  %>
        </div>
        <div class=" row form-group">
         <div class="col-md-6">
           <%= f.input_field :cc_exp,  placeholder: "MM/YYYY"  %>
        </div>
        <div class="col-xs-offset-1 col-xs-5">

          <%= f.input_field :cc_cvc,  placeholder: "CVV"  %>

        </div>
      </div>
    </div>

    <div class="form-group">
     <div class="col-md-12 text-center"><hr />
      <%= f.button :submit, "Upgrade Account", class: 'btn btn-primary' %>

    </div>
  </div>

  <% end %>
</div>
</div>

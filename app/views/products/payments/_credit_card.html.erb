 <div class="buy" data-product-id="<%= @product.id %>">
   <div class="row buy-form">

     <div class="pay-title col-md-5">

      <div class="row ">
       <div class="col-md-12">
        <h2 class="text-primary"> <%=  humanized_money_with_symbol  @product.price %></h2>
      </div>
    </div>
    <div class="row ">
     <div class="col-md-12">
       <h3><%= @product.name %></h3>
       <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
       tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
       quis nostrud exercitation.</p>
     </div>
   </div>
 </div>
 <div class="credit-card col-md-7">
   <form role="form" class="cc-form">
    <div class="form-group">
      <div class="left-addon ">
    <i class="fa fa-envelope fa-lg"></i>
   <input type="email" class="cc-email form-control"  placeholder="Your Email">
</div>
    </div>
    <div class="form-group">
          <div class="left-addon ">
    <i class="fa fa-credit-card fa-lg"></i>
   <input type="text" class="cc-num form-control"  placeholder="Credit Card Number">
</div>
    </div>
    <div class=" row form-group">
     <div class="col-md-4">
      <input type="text" class="cc-exp form-control"
      placeholder="MM/YYYY">
    </div>
    <div class="col-xs-offset-5 col-xs-3">
      <input type="text"  class="cc-cvc form-control"  placeholder="CVV">
    </div>
  </div>
  <div class="row form-group">
    <div class="col-md-offset-1 col-md-10">
      <button type="submit" class="btn btn-pay btn-lg btn-block btn-primary">Pay</button>
    </div>
  </div>
</form>
</div>
</div>
</div>
<div id="js-product" class="product">
  <% if @product.preview %>
  <div class="landing-preview">
    <div class="product-image">
      <%= image_tag @product.preview %>
    </div>
  </div>
  <% end %>

  <div class="landing-body">
   <div class="landing-description">
     <h3><%= @product.name %> </h3>
     <p><%= @product.description %></p>
   </div>

   <div class="landing-info">
     <div class="landing-info-section">
       <div>
        <h2> <%=  humanized_money_with_symbol  @product.price %></h2>
      </div>
    </div>

    <div class="landing-info-section">
      <div>
        <% if @downloadable %>
        <%= link_to 'Download', download_product_path(@token), class: "btn-link-download" %>
        <p> You can download the product further
          <b id="js-download-counts"><%= 5 - @downloads  %></b> times </p>
          <%# elsif @downloads and @downloads <= 5 %>
<!--           <a href="#"
          class="disabled btn btn-large btn-block btn-success">
          Download
        </a>
        <p>Reached limit downloads, <a href="#buy">buy again</a> </p> -->
        <% elsif !@published %>
        <p class="text-danger text-center">This product is not currently for sale.</p>
        <% else %>
        <% if @paypal and !@credit_card %>
        <a href="#paypal"  data-product-id="<%= @product.id %>"
          class="paypal btn-buy">Buy Now!</a>
          <% else %>
          <a id="js-btn-buy" href="#cc-form" class="btn-buy"> Buy Now!</a>
          <% end %>

          <a href="#download" class="btn-download hidden"> Download</a>
          <% end %>
        </div>
      </div>

      <div class="landing-info-section">
        <div class="details">
          <ul>
            <li><span>Size:</span>
              <b class=""><%# number_to_human_size @product[:file] %></b></li>
              <li> <span>Type:</span>
                <b class=""><%= @product.extension.upcase %></b></li>
                <li> <span>By:</span>
                  <b><%= @user.name %></b></li>
                </ul>
              </div>
            </div>
          </div>
        </div>

        <div id="footer">
          <hr></hr>
          <p>POWERED BY <b>UP</b>&amp;<b>SELL</b>.ME </p>
        </div>
      </div>

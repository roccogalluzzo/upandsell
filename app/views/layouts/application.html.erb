<!DOCTYPE html>
<html lang="en">
<head>
  <title>Up&amp;Sell.me - <%= content_for :title %></title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tag %>
  <script type="text/javascript">
    Utils.registerPage("<%= controller_name %>", "<%= action_name %>");
  </script>
  <script type="text/javascript">
    WebFontConfig = {
      google: { families: [ 'Open+Sans:400,300,600,700:latin' ] }
    };
    (function() {
      var wf = document.createElement('script');
      wf.src = ('https:' == document.location.protocol ? 'https' : 'http') +
      '://ajax.googleapis.com/ajax/libs/webfont/1/webfont.js';
      wf.type = 'text/javascript';
      wf.async = 'true';
      var s = document.getElementsByTagName('script')[0];
      s.parentNode.insertBefore(wf, s);
    })(); </script>
  </head>
  <body>

    <div class="header navbar navbar-inverse">
      <div class="navbar-inner">
        <div class="header-seperation text-center">
          <ul class="nav pull-left notifcation-center" id="main-menu-toggle-wrapper" style="display:none">
            <li class="dropdown">
              <a id="main-menu-toggle" href="#main-menu" class="">
                <div class="iconset top-menu-toggle-white"></div>
              </a>
            </li>
          </ul>
          <%= link_to user_root_path, class:'brand' do %>
          <b>Up</b><span>&amp;<b>Sell</b>.Me</span>
          <% end %>
        </div>

        <div class="header-quick-nav">
          <div class="pull-left">
            <h3 class="head-title"><%= content_for :title %></h3>
          </div>
          <ul class="nav quick-section pull-right">

            <% if is_admin? %>
            <li class="quicklinks"><%= link_to(admin_root_path) do %>
             <i class="fa fa-user  icon-user-2"></i>
             <% end %>
           </li>
           <li class="quicklinks"><span class="h-seperate"></span></li>
           <% end %>
           <li class="quicklinks"><%= link_to(new_user_product_path) do %>
             <i class="fa  icon-add-symbol"></i>
             <% end %>
           </li>
           <li class="quicklinks"><span class="h-seperate"></span></li>
           <li class="quicklinks"><%= link_to(user_settings_account_path) do %>
             <i class="fa  icon-settings-wheel-fill"></i>
             <% end %>
           </li>

           <li class="quicklinks"><span class="h-seperate"></span></li>
           <li class="quicklinks"><%= link_to(destroy_user_session_path, :method => :delete) do %>
             <i class="fa  fa-power-off"></i>
             <% end %>
           </li>
         </ul>
       </div>
     </div>
   </div>
 </div>

 <div class="page-container row-fluid">
  <div class="page-sidebar" id="main-menu">
   <div class="page-sidebar-wrapper" id="main-menu-wrapper">
     <ul>
      <li class="<%= 'active' if current_page?(user_root_path) %>">
        <%= link_to user_root_path do %>
        <i class="fa fa-lg fa-w icon-graph-up-1"></i>
        <span> Summary </span>
        <% end %>
      </li>
      <li class="<%= 'active' if current_page?(user_products_path) %>">
       <%= link_to user_products_path do %>
       <i class="fa fa-lg fa-w icon-tag-2"></i>
       <span> Products </span>
       <% end %>
     </li>
     <li class="<%= 'active' if current_page?(user_orders_path) %>">
      <%= link_to user_orders_path do %>
      <i class="fa  fa-lg fa-w icon-reciept-1"></i>
      <span>Orders</span>
      <% end %>
    </li>
    <li class="<%= 'active' if current_page?(user_affiliations_path) %>">
      <%= link_to user_affiliations_path do %>
      <i class="fa  fa-lg fa-w icon-connection"></i>
      <span>Affiliations</span>
      <% end %>
    </li>
  </ul>
</div>
</div>
<%# render partial: "layouts/messages", flash: flash %>
<div class="page-content">
  <div class="animated-alert"><div class="message">
    <p id="js-message" ></p>

  </div></div>
  <div class="content">
    <%= yield %>
  </div>
</div>
<!-- END PAGE CONTAINER -->
</div>
<!-- END CONTENT -->
</div>

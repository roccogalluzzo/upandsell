<!DOCTYPE html>
<!--[if IE 7]> <html lang="en" class="ie7"> <![endif]-->
<!--[if IE 8]> <html lang="en" class="ie8"> <![endif]-->
<!--[if IE 9]> <html lang="en" class="ie9"> <![endif]-->
<!--[if !IE]><!--> <html lang="en"> <!--<![endif]-->
<head>
  <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
      <![endif]-->

      <title>Up&amp;Sell.me</title>
      <!-- Meta -->
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <%= stylesheet_link_tag "customer_area" %>
      <%= javascript_include_tag "customer_area" %>
      <%= csrf_meta_tag %>
    </head>

    <body>
     <div id="wrap">
     <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to('UP&SELL.ME',customer_root_path, :class => 'navbar-brand') %>
        </div>

          <ul class="nav navbar-nav">
            <li class="<%= 'active' if current_page?(customers_path) %>">
              <%= link_to raw('Summary'), customers_path %>
            </li>
            <li class="<%= 'active' if current_page?(customer_products_path) %>">
             <%= link_to raw('Products'), customer_products_path %>
           </li>
           <li class="<%= 'active' if current_page?(customer_payments_path) %>">
            <%= link_to raw('Orders'), customer_payments_path %>
          </li>
          <li><a href="#">Stats</a></li>
          <li><a href="#">Support</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= link_to(new_customer_product_path) do %>
            <i class="fa fa-plus fa-lg"></i>
            <% end %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="fa fa-cog fa-lg"></i>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to(customer_settings_account_path) do %>
                <i class="fa fa-user"></i> Account
                <% end %>
              </li>
              <li>
                <%= link_to(customer_settings_payments_path) do %>
                <i class="fa fa-money"></i> Payments
                <% end %>
              </li>
            </ul>
          </li>
          <li>
           <%= link_to(destroy_customer_session_path, :method => :delete) do %>
           <i class="fa fa-sign-out fa-lg"></i>
           <% end %>
         </li>
       </ul>

   </div>
   <div class="row glue-fix headline">
  <div class="row">
   <%= yield :header %>
</div>
</div>
   <div class="row">
    <div class="col-lg-12 content">
    <%= render partial: "layouts/messages", flash: flash %>
<%= yield %>
    </div>
  </div>
</div>
</body>
</html>

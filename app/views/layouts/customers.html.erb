<!DOCTYPE html>
<!--[if IE 7]> <html lang="en" class="ie7"> <![endif]-->
<!--[if IE 8]> <html lang="en" class="ie8"> <![endif]-->
<!--[if IE 9]> <html lang="en" class="ie9"> <![endif]-->
<!--[if !IE]><!--> <html lang="en"> <!--<![endif]-->
<head>
    <title>Up&amp;Sell.It</title>
    <!-- Meta -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag "customer_area" %>
    <%= javascript_include_tag "customer_area" %>
    <%= csrf_meta_tag %>
</head>

<body>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#"></a>
          <%= link_to('Up&Sell.It',customer_root_path, :class => 'navbar-brand') %>
      </div>
      <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <i class="fa fa-cog"></i>
                </a>
                <ul class="dropdown-menu">
                  <li>
<%= link_to(customer_settings_account_path) do %>
<i class="fa fa-user"></i> Account
             <% end %>
                </li>
                 <li>
<%= link_to(customer_settings_payments_path) do %>
<i class="fa fa-money"></i> Payments
             <% end %>
                </li>
              </ul>
          </li>
          <li>
             <%= link_to(destroy_customer_session_path, :method => :delete) do %>
             Logout <i class="fa fa-sign-out"></i>
             <% end %>
         </li>
     </ul>
 </div>
</div>
</nav>

<div class="container">
    <div class="app-content">
        <div class="row">
            <div class="col-md-3">
                <div class="col-md-12 text-center admin-add">

                   <%= link_to raw(' <i class="fa fa-cloud-upload"></i>
                       Add Product'),
                       new_customer_product_path, class: "btn btn-primary btn-lg" %>
                   </div>

                   <div class="col-md-12">
                    <%
                    dashboard_icon = "fa fa-home"
                    products_icon = "fa fa-file"
                    orders_icon = "fa fa-money"
                    if current_page?(customers_path)
                        dashboard_icon << " white"
                    end

                    if current_page?(customer_products_path)
                        products_icon << " white"
                    end

                    if current_page?(customer_payments_path)
                        orders_icon << " white"
                    end
                    %>
                    <ul class="nav nav-pills nav-stacked">
                        <li class="<%= 'active' if current_page?(customers_path) %>">
                            <%= link_to raw('<i class="' + dashboard_icon + '"></i> Dashboard'), customers_path %>

                        </li>
                        <li class="<%= 'active' if current_page?(customer_products_path) %>">
                           <%= link_to raw('<i class="' + products_icon + '"></i> Products'), customer_products_path %>
                       </li>
                       <li class="<%= 'active' if current_page?(customer_payments_path) %>">
                        <%= link_to raw('<i class="' + orders_icon + '""></i> Orders'), customer_payments_path %>
                    </li>
                    <li><a href="#"><i class="fa fa-bar-chart-o"></i> Stats</a></li>
                    <li><a href="#"><i class="fa fa-info-circle"></i> Support</a></li>
                </ul>
            </div>
        </div>
        <div class="col-md-9 admin-data">
            <div class="alert-box">
                <%= render partial: "layouts/messages", flash: flash %>
            </div>
            <%= yield %>
        </div>
    </div>
</div><!--/row-fluid-->

</div>


</div><!--/container-->
<!-- End Content Part -->
</body>
</html>

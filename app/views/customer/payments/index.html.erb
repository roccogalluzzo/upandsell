<div class="block">
  <div class="navbar navbar-inner block-header">
    <div class="muted pull-left">Payments</div></div>
    <div class="block-content collapse in">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if @payments.blank? %>
          <tr> <td colspan="2">No payments Founds</td></tr>
          <% else %>
          <% @payments.each do |payment| %>
          <tr>
            <td><%= payment.name %></td>
            <td><div class="btn-group">
             <%= link_to "Show", customer_payment_path(payment), :class => "btn btn-info" %>
             <%= link_to "Edit", edit_customer_payment_path(payment), :class => "btn" %>
             <%= link_to "Delete", customer_payment_path(payment), method: :delete, data: { confirm: 'Are you sure?'} , :class => "btn btn-danger" %>
           </div>
         </td>
       </tr>
       <% end %>
       <% end %>
     </tbody>
   </table>
 </div>
</div>
</div>
</div>
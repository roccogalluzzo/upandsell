    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="product-preview-box hide">
        <label id="product_preview_label">Preview</label>
        <div id="btn-thumb-cont">
          <a id="btn-thumb-upload" class="btn btn-success" href="#">
           <i class="fa fa-cloud-upload"></i>Choose Image</a>
         </div>
         <div class="text-center add-thumb preview">
           <% unless @product.new_record? %>
           <%= image_tag @product.thumb.url, style: 'max-width: 100%;
           max-height: 100%;' %>
           <% end %>
         </div>
       </div>
       <div class="file-alt">
         <%= f.input_field :thumb, id: 'file-input', class: 'input-thumb input-file' %>
       </div>
     </div>

     <div class="col-md-6">
       <label>Description</label>
       <%= f.input_field :description, class: 'form-control product-description' %>
     </div>
   </div>


   <div class="row">
     <div class="col-md-12 text-center"><hr />
      <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
  </div>
</div>


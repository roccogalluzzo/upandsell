<%= simple_form_for [:customer,@product], defaults: { class: "form-horizontal" } do |f| %>

<div class="block">
	<div class="navbar navbar-inner block-header">
		<div class="muted pull-left">Products</div>
	</div>
	<div class="block-content collapse in">
		<div class="span12">
			<form class="form-horizontal">
				<fieldset>
					<legend>Add Product</legend>
					<%= f.input :name, input_html: { class: 'input-xlarge'} %>
					<%= f.input :price %>
					<%= f.input :description, size: "60x12" %>
					<%= f.input :file %>
					<%= f.input :thumb, input_html: { class: 'input-file uniform_on'} %>
					<div class="form-actions">
						
						<%= f.button :submit %>
					</div>
				</fieldset>
			</form>

		</div>
	</div>
</div>



<% end %>
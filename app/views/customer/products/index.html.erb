<% content_for :header do %>
    <div class="col-lg-10">
      <h1>PRODUCTS</h1>
    </div>
    <div class="col-lg-2">
     <%= link_to "Add Product",
     new_customer_product_path,
     class: "btn btn-primary",
      remote: true,
      data: { backdrop: "static",
       toggle: "modal",
       target: "#new-product" } %>
     </div>
<% end %>

 </div>
 <div class="modal fade in" id="new-product" tabindex="-1" role="dialog"
 aria-labelledby="myModalLabel" aria-hidden="false">
</div>
<div class="modal fade in" id="edit-product" tabindex="-1" role="dialog"
aria-labelledby="myModalLabel" aria-hidden="false">
</div>

</div>
<div class="row">
  <div class="col-lg-12 content">
    <div class="row">
      <div class="col-lg-12">
        <div class="row">
          <div class="col-lg-offset-1 col-lg-10">
<%= @url %>
           <div class="list">

             <% if @products.blank? %>
             <p>No products Founds</p>
             <% else %>
             <% @products.each do |product| %>
             <div class="list-item row">
               <div class="col-sm-1">
                <%= image_tag product.thumb.url(:small), :class => "img-circle" %>
              </div>
              <div class="col-sm-5 details">
                <strong>
                <%= link_to(product.name, edit_customer_product_path(product),
                  remote: true,
                  data: { backdrop: "static",
                   toggle: "modal",
                   target: "#edit-product" }) %>
                 </strong>

               </div>

               <div class="col-sm-5 list-stats">
                <span><i class="fa fa-eye text-muted"></i> 1234</span>
                <span><i class="fa fa-shopping-cart"></i> 1268</span>
                <span><span class="dollar">$</span>123</span>
              </div>
              <div  class="col-sm-1 ext">
              <!--
                <a href="  url_for controller: '/products', action: 'show', slug: product.slug, only_path: false ">
                -->
                <em class="text-muted"> <i class="fa fa-external-link fa-lg"></i></em>
              </a>
            </div>
          </div>
          <% end %>
          <% end %>


        </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>


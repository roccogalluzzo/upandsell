<div class="headline"><h3>My Products</h3></div>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>actions</th>
          </tr>
        </thead>
        <tbody>
          <% if @products.blank? %>
          <tr> <td colspan="2">No products Founds</td></tr>
          <% else %>
          <% @products.each do |product| %>
          <tr>
            <td>
            <%= link_to product.name, customer_product_path(product) %></td>
            <td><div class="btn-group">
          
             <%= link_to "Edit", edit_customer_product_path(product), :class => "btn" %>
             <%= link_to "Delete", customer_product_path(product), method: :delete, data: { confirm: 'Are you sure?'} , :class => "btn btn-danger" %>
           </div>
         </td>
       </tr>
       <% end %>
       <% end %>
     </tbody>
   </table>
 </div>

<div class="col-md-6 col-md-offset-3 sign-box">

	<h3>Forgot your password?</h3>

	<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, :defaults => { :input_html => { :class => "form-control input-xlarge" }}) do |f| %>
	<%= f.error_notification %>

	<div class="form-group">


		<%= f.input_field :email, :required => true, :autofocus => true %>
	</div>

	<div class="controls form-group">
		<%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary" %>
	</div>
	<% end %>
	<%= render "devise/shared/links" %>

<div class="row-fluid">
	<div class="log-page">
		<h3>Forgot your password?</h3>

		<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, :defaults => { :input_html => { :class => "form-control input-xlarge" }}) do |f| %>
		<%= f.error_notification %>

		<div class="input-prepend">
			<span class="add-on"><i class="icon-envelope"></i></span>

			<%= f.input_field :email, :required => true, :autofocus => true %>
		</div>


		<div class="controls form-inline">
			<%= f.button :submit, "Send me reset password instructions", class: "btn-u pull-right" %>
		</div>
		<% end %>
	</div>
	<%= render "devise/shared/links" %>

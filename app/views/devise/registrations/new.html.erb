<% content_for(:page_title)  { "Join Us" } %>
<div class="sign-up-header">
  <h1>Start selling with us</h1>
</div>
<div class="sign-in-container">
  <div class="row">
<div class="sign-in-box">
  <div class="body">
    <div class="social-logins">
      <div class="fb-login">
        <a href="/users/auth/facebook" class="fb-btn"><span class="logo"><i class="fa fa-facebook"></i></span> <span class="text">Facebook</span></a>
      </div>
      <div class="google-login">
      <a href="/users/auth/google_oauth2" class="google-btn"><span class="logo"><i class="fa fa-google"></i></span> <span class="text">Google</span></a>
    </div>
    </div>
    <div class="login-middleline row">
<p><span>or</span></p>
    </div>
    <%= simple_form_for(resource, as: resource_name, :html => {:'data-type' => 'json', class: 'sign-up-form'}, remote: true, format: :json, url: registration_path(resource_name), id: 'sign-form') do |f| %>
    <input name="user[referer_id]" value="<%= @ref %>" type="hidden">

    <div class="form-group">
      <%= f.input_field :name, required: true, autofocus: true,
      placeholder: "Your Full Name"
      %>
    </div>
    <div class="form-group">
      <%= f.input_field :email, required: true, autofocus: true,
      placeholder: "Your Email"
      %>
    </div>
    <div class="form-group">
      <%= f.input_field :password, minlength: "6", required: true, placeholder: "Create a Password" %>

    </div>
    <div class="legal-info">
     <small>By clicking Sign up, you agree to the <%= link_to "Terms of Service", terms_path %> and
      <%= link_to "Privacy Policy", privacy_path %>.</small>
    </div>
    <div id="js-form-error">The email address supplied is not a valid email or is already in use.</div>
    <%= f.button :submit, "Sign up", class: "btn-submit", data: { disable_with: "Processing..." } %>
    <% end %>
  </div>
  <div class="sign-box-links">
    <small><%= link_to "Already a user?", new_session_path(resource_name) %></small>
  </div>
</div>
</div>
</div>

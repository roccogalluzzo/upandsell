<script type="text/javascript">
  mixpanel.track("Sign Up Page Visited");
</script>
<div class="col-md-6 col-md-offset-3 sign-box">
<div class="head">
    <h2>Sign up</h2>
</div>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="form-group">
  <%= f.input_field :name, required: true, autofocus: true,
    placeholder: "Your Name"
    %>
  </div>
  <div class="form-group">
    <%= f.input_field :email, required: true, autofocus: true,
    placeholder: "Your Email"
    %>
  </div>
  <div class="form-group">
    <%= f.input_field :password, required: true, placeholder: "Create a Password" %>
  <small>By clicking Sign up, you agree to the <%= link_to "Terms of Service", terms_path %> and
  <%= link_to "Privacy Policy", privacy_path %>.</small>
  </div>

    <%= f.button :submit, "Sign up", class: "btn btn-lg btn-block btn-primary" %>
  <% end %>
  <small><%= link_to "Already a user?", new_session_path(resource_name) %></small>
</div>


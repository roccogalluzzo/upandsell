<div class="col-md-6 col-md-offset-3 sign-box">
  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
  <%= f.input_field :name, required: true, autofocus: true,
    placeholder: "Your Name..."
    %>
  </div>
  <div class="form-group">
    <%= f.input_field :email, required: true, autofocus: true,
    placeholder: "Your Email Address..."
    %>
  </div>
  <div class="form-group">
    <%= f.input_field :password, required: true, placeholder: "Password" %>
  </div>


  <div class="form-group">
    <%= f.button :submit, "Sign up", class: "btn btn-lg btn-block btn-primary" %>
  </div>
    <hr />
  <h4>Already a user?</h4>
  <p><%= link_to "Sign In Here", new_session_path(resource_name) %></p>
  <% end %>
</div>

</div>

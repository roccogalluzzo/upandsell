<div class="sign-box">
  <div class="head">
    <h3>Sign up</h3>
  </div>
  <div class="body">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), id: 'sign-form') do |f| %>
    <input name="user[referer_id]" value="<%= @ref %>" type="hidden">
    <div class="form-group">
      <%= f.input_field :name, required: true, autofocus: true,
      placeholder: "Your Full Name"
      %>
    </div>
    <div class="form-group">
      <%= f.input_field :email, required: true, autofocus: true,
      placeholder: "Your Email"
      %>
    </div>
    <div class="form-group">
      <%= f.input_field :password, minlength: "6", required: true, placeholder: "Create a Password" %>

    </div>
    <div class="legal-info">
     <small>By clicking Sign up, you agree to the <%= link_to "Terms of Service", terms_path %> and
      <%= link_to "Privacy Policy", privacy_path %>.</small>
    </div>
    <%= f.button :submit, "Sign up", class: "btn-submit" %>
    <% end %>
    <div class="sign-box-links">
      <small><%= link_to "Already a user?", new_session_path(resource_name) %></small>
    </div>
  </div>
</div>

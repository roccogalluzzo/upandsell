<% content_for :title do %>
Email Confirmation - Up&amp;Sell.Me
<% end %>
<table class="row">
  <tr>
    <td class="wrapper last">
      <table class="twelve columns">
        <tr>
          <td class="box-title">
            <h1>Hello <%= @resource.name %>!</h1>
          </td>
          <td class="expander"></td>
        </tr>
      </table>
    </td>
  </tr>
</table>

<table class="row">
  <tr>
    <td class="wrapper last">
      <table class="twelve columns">
        <tr>
          <td class="text-pad box-message">
            <p>
              Someone has requested a link to change your password. You can do this through the link below.
            </p>
          </td>
          <td class="expander"></td>
        </tr>
      </table>
    </td>
  </tr>
</table>

<table class="row">
  <tr>
    <td class="wrapper last">
      <table class="twelve columns">
        <tr>
          <td class="text-pad box-btn">
      <div><!--[if mso]>
  <v:roundrect xmlns:v="urn:schemas-microsoft-com:vml"
   xmlns:w="urn:schemas-microsoft-com:office:word"
   href="<%= edit_password_url(@resource, :reset_password_token => @token) %>"
   style="height:50px;v-text-anchor:middle;width:150px;" arcsize="12%" stroke="f" fillcolor="#53aede">
    <w:anchorlock/>
    <center>
      <![endif]-->
      <a href="<%= edit_password_url(@resource, :reset_password_token => @token) %>"
        style="background-color:#53aede;border-radius:6px;color:#ffffff;display:inline-block;font-family:sans-serif;font-size:15px;font-weight:bold;line-height:50px;text-align:center;text-decoration:none;width:150px;-webkit-text-size-adjust:none;">
        Change Password</a>
  <!--[if mso]>
    </center>
  </v:roundrect>
  <![endif]--></div>
</td>
<td class="expander"></td>
</tr>
</table>
</td>
</tr>
</table>
<table class="row" style="margin-bottom: 10px;">
  <tr>
    <td class="wrapper last">
      <table class="twelve columns">
        <tr>
          <td class="text-pad box-alt-link">
            <a  class="box-alt-link" href="<%= edit_password_url(@resource, :reset_password_token => @token) %>">
             <%= edit_password_url(@resource, :reset_password_token => @token) %></a>
           </p>
         </td>
         <td class="expander"></td>
       </tr>
     </table>
   </td>
 </tr>
</table>

<table class="row">
  <tr>
    <td class="wrapper last">
      <table class="twelve columns">
        <tr>
          <td class="text-pad box-email-info">
           <p>
           If you didn't request this, please ignore this email.
           <b>Your password won't change until you access the link above and create a new one.</b>
          </p>
        </td>
        <td class="expander"></td>
      </tr>
    </table>
  </td>
</tr>
</table>

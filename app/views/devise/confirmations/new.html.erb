<div class="sign-box">
  <div class="head">
<h3 style="font-size: 33px;">Resend confirmation instructions</h3>
  </div>
  <div class="body">
<%= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>

  <div class="form-inputs">
    <%= f.input :email, :required => true, :autofocus => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Resend confirmation instructions", class: "btn-submit"  %>
  </div>
<% end %>
</div>
</div>
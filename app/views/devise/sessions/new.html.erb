<div class="sign-box">
    <div class="head">
      <h3>Sign in</h3>
    </div>
<div class="body">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <input name="user[referer_id]" value="<%= @ref %>" type="hidden">
    <div class="form-group">
      <%= f.input_field :email, required: true, autofocus: true,
      placeholder: "Your Email"
      %>
    </div>
    <div class="form-group">
      <%= f.input_field :password, minlength: "6", required: true, placeholder: "Your Password" %>
    </div>
    <%= f.button :submit, "Sign in", class: "btn-submit" %>
    <% end %>
    <div class="sign-box-links">
    <small><%= link_to "Forget your Password ?", new_user_password_path %></small>
    </div>
  </div>
</div>
